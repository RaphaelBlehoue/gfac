{% extends 'LabsFacturationBundle::layout_system.html.twig' %}
{% block Title %}  {{ 'Gestion Configuration'|capitalize }} {% endblock %}
{% block loyout_body %}
    <!-- Main content -->
    <div class="content-wrapper">
        <!-- Form horizontal -->
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title">{{ 'Gestion des configurations - Modification' }}</h5>
                <div class="heading-elements">
                    <div class="btn-group">
                        <a href="{{ path('labs_facturation_unite_view') }}" class="btn btn-primary btn-labeled"><b><i class="icon-menu7"></i></b> Afficher la liste</a>
                        <a href="{{ path('labs_facturation_unite_add') }}" class="btn btn-success btn-labeled"><b><i class="icon-plus3"></i></b> Créer un nouveau</a>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                {{ form_start(form, { attr : { 'class':'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <fieldset class="content-group col-lg-6 col-md-offset-2">

                    <legend class="text-bold">Formulaire de modification d'unité</legend>

                    <div class="form-group">
                        <label class="control-label col-lg-3">Nommage de l'unité</label>
                        <div class="col-lg-9">
                            {{ form_row(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-3">Abbréviation</label>
                        <div class="col-lg-9">
                            {{ form_row(form.code) }}
                            {{ form_errors(form.code) }}
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-danger"> Modifier <i class="icon-database-add position-right"></i></button>
                    </div>

                </fieldset>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}
{% block themes %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/plugins/forms/styling/uniform.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/pages/form_inputs.js') }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/core/libraries/jquery_ui/interactions.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/plugins/forms/selects/select2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/pages/form_select2.js') }}"></script>

{% endblock %}