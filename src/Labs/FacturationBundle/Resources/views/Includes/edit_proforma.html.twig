
<div id="modal_form_editproduct-{{ id }}" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h5 class="modal-title">Modification de la proforma : référence produit : {{ reference }}</h5>
            </div>

            {{ form_start(form, {action : path('labs_facturation_proforma_product_edit',{ 'id' : id, 'reference': reference, 'proformaid' : proformaid, 'proformaref': proformaref })} ) }}
            {{ form_errors(form) }}
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <label> Disponibilité du stock : </label>
                                <span class="label label-success stock">{{ stock.quantity }}</span>
                                <input type="hidden" value="{{ stock.quantity }}" class="stock_input" name="_stock_count">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Quantité produit</label>
                                {{ form_errors(form.qteCmd) }}
                                {{ form_row(form.qteCmd) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Prix du produit dans cette proforma</label>
                                {{ form_errors(form.price) }}
                                {{ form_row(form.price) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Durée d'excution de la proforma</label>
                                {{ form_errors(form.duration) }}
                                {{ form_row(form.duration) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Modifier la remise</label>
                                {{ form_errors(form.remise) }}
                                {{ form_row(form.remise) }}
                            </div>
                            <div class="col-sm-6">
                                <label>Exemple :</label>
                                <span class="label border-left-info label-striped">Ex: 18 ou 18,5. <span class="label label-danger">A eviter : 18% ou 18,5%  </span></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="label label-flat border-danger text-danger-600 text-left alert-messages"></span>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-success btn_outstock">Modifier</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>


