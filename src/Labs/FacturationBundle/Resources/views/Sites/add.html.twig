{% extends 'LabsFacturationBundle::layout_system.html.twig' %}
{% block Title %}  {{ 'Gestion des Articles'|capitalize }} {% endblock %}
{% block loyout_body %}
<!-- Main content -->
 <div class="content-wrapper">
	<!-- Form horizontal -->
	<div class="panel panel-flat">
        <div class="panel-heading">
			<h5 class="panel-title">{{ 'Gestion des Sites - Créer un nouveau site' }}</h5>
			<div class="heading-elements">
				<div class="icons-list">
                    <a href="{{ path('labs_facturation_site_view') }}" class="btn btn-primary btn-labeled"><b><i class="icon-menu7"></i></b> Afficher la liste</a>
		        </div>
	        </div>
		</div>
		<div class="panel-body">
                {{ form_start(form, { attr : { 'class':'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <fieldset class="content-group col-lg-6 col-md-offset-2">

                    <legend class="text-bold">Formulaire de création de site (Lieux)</legend>

                    <div class="form-group">
                        <label class="control-label col-lg-3">Nom du site</label>
                        <div class="col-lg-9">
                            {{ form_row(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-3">Longitude <b>(GPS)</b></label>
                        <div class="col-lg-9">
                            {{ form_row(form.lng) }}
                            {{ form_errors(form.lng) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-3">Latitude <b>(GPS)</b></label>
                        <div class="col-lg-9">
                            {{ form_row(form.lnt) }}
                            {{ form_errors(form.lnt) }}
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">Enregister <i class="icon-database-add position-right"></i></button>
                    </div>

                </fieldset>

            {{ form_end(form) }}

        </div>
    </div>
 </div>
{% endblock %}
{% block themes %}
{{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/plugins/forms/styling/uniform.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/pages/form_inputs.js') }}"></script>
{% endblock %}